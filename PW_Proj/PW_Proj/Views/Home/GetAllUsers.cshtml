@model IEnumerable<User>

@{
    ViewBag.Title = "Users List";
    <link href="~/lib/twitter-bootstrap/css/bootstrap.css" rel="stylesheet" /> 
    <link href="~/css/site.css" rel="stylesheet" />
}
<div class=" card-deck">
    @foreach (var user in Model)
    {
        var photoPath = "~/images/" + (user.PhotoPath ?? "userImage.png");

    <div class="card m-3 bg-dark" style="min-width: 18rem; max-width:30.5%;">
        <div class="card-header text-center text-white">
            <h3>@user.UserName</h3>
        </div>
        <img class="card-img-top imageThumbnail" src="@photoPath" height="200px" width="auto" asp-append-version="true" />
        <div class="card-footer text-center text-white">
            <a asp-controller="home" asp-action="details" asp-route-id="@user.Id"
               class="btn btn-primary m-1">View</a>
            <a  asp-action="edit" asp-controller="home" asp-route-id="@user.Id" class="btn btn-primary m-1">Edit</a>
            <a href="#" class="btn btn-danger m-1">Delete</a>
        </div>
    </div>
    }
</div>