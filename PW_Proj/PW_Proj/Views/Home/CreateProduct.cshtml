@model ProductCreateViewModel

@{
    ViewBag.Title = "CreateProduct";
}

<form enctype="multipart/form-data" asp-controller="Home" asp-action="CreateProduct" method="post" class="mt-3">
    <div class="form-group row">
        <label asp-for="ProductName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="ProductName" class="form-control" placeholder="ProductName" />
            <span asp-validation-for="ProductName" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="ProductCount" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="ProductCount" class="form-control" placeholder="ProductCount" />
            <span asp-validation-for="ProductCount" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Photo" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <div class="custom-file">
                <input asp-for="Photo" class="form-control custom-file-input" />
                <label class="custom-file-label">Choose File...</label>
            </div>
        </div>
    </div>

    <div asp-validation-summary="All" class="text-danger"></div>

    <div>
        <button type="submit" class="btn btn-primary">Create</button>
    </div>

    @section Scripts {
        <script>
                $(document).ready(function () {
                    $('.custom-file-input').on("change", function () {
                        var fileName = $(this).val().split("\\").pop();
                        $(this).next('.custom-file-label').html(fileName);
                    });
                });
        </script>
    }
</form>